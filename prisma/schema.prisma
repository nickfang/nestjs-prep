generator client {
  provider = "prisma-client-js"
  // output = "./generated/prisma-client.js"
}

generator dbml {
  provider = "prisma-dbml-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          Int      @id @default(autoincrement())
  name        String
  instructions String
  servings    Int
  ingredients Ingredient[]
}

model Ingredient {
  id       Int      @id @default(autoincrement())
  name     String
  quantity Float // Using Float to handle fractions (e.g., 0.5 for half)
  unit     String // Optional: e.g., "cup", "tablespoon", etc.
  recipe   Recipe  @relation(fields: [recipeId], references: [id])
  recipeId Int
}